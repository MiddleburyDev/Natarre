<%= render "layouts/header" %>
<div id="main-container">
	<div id="main" class="main main-content">
		<div id="login-form">
			<%= form_tag({:controller => "sessions", :action => "create"}, :method => "post") do %>


			<p><%= text_field_tag :email, nil, :placeholder => "Email" %></p>


			<p><%= password_field_tag :password, nil, :placeholder => "Password"  %></p>

			<p><%= submit_tag "Login" %></p>	


			<% end %>
			<button id="fb-login-button"></button>
		</div>
	</div>
</div>