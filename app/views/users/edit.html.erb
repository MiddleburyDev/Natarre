<%= render "layouts/header" %>
<div id="main-container">
	<div id="main" class="main main-content edit">

		<h1>User Information</h1>
		<%= form_tag({:action => :update}, :method => :post) do %>
			<p><%= text_field_tag :name, @user.name %></p>
			<p><%= text_field_tag :email, @user.email %></p>
			<p><%= password_field_tag :password %></p>
			<p><%= submit_tag "Update" %>
		<% end %>
	</div>
</div>