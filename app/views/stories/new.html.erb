<%= form_tag '/stories/create', :multipart => true, :remote => true, :method => 'post' do -%>
	<%= text_field_tag 'title', nil, :placeholder=> "Story Title", :maxlength => 80, :size => 80, :class => "title-input"-%>
	<%= label_tag 'content', 'Your story:'-%>
	<%= text_area_tag 'content', nil, :rows => 10, :columns => 80-%>
	<%= label_tag 'audio', 'Optional recorded presentation of your story:'-%>
    <%= file_field_tag 'audio'-%>
	<%= label_tag 'picture', 'Story thumnail:'-%>    
	<%= file_field_tag 'picture'-%>
	<%= submit_tag 'Publish!'-%>
<% end -%>